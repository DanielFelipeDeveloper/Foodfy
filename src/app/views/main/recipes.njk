{% extends "main/layout.njk" %}

{% block head %}
    <title>Receitas - Foodfy</title>
{% endblock %}

{% block header %}
        <a href="/about">Sobre</a>
        <a href="/recipes">
            <strong>Receitas</strong>
        </a>
        <a href="/chefs">Chefs</a>
{% endblock %}

{% block search %}
    <form action="/recipes" method="GET">
        <input 
            type="text" 
            name="filter"
            placeholder="Buscar uma receita"
            value="{{ filter }}"
        >
        <button type="submit">Buscar</button>
    </form>
{% endblock search %}

{% block content %}
    <section class="recipes">
        <div class="cards-recipes">
            {% for recipe in recipes %}
                <div class="card-recipe" id='{{ recipe.id }}'>
                    <img src="{{ recipe.file_src }}" alt="Imagem de {{recipe.title}}">
                    <h3>{{recipe.title}}</h3>
                    <p>{{recipe.chef_name}}</p>
                </div>
            {% endfor %}
        </div>
    </section>

    <script src="/scripts/recipes.js"></script>
{% endblock %}