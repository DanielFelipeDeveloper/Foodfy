{% extends "user/layout.njk" %}
{% block head %}
    <title>Receitas - Foodfy</title>
    <style>
        body {
            height: 100vh;
        }
    </style>
{% endblock %}

{% block header %}
    <a href="/about">Sobre</a>
    <a href="/recipes">
        <strong>Receitas</strong>
    </a>
{% endblock %}

{% block content %}
    <section class="recipes">
        <div class="cards-recipes">
            {% for recipe in recipes %}
                <div class="card-recipe" id='{{ recipe.id }}'>
                    <img src={{ recipe.image }} alt="Imagem de {{recipe.title}}">
                    <h3>{{recipe.title}}</h3>
                    <p>{{recipe.author}}</p>
                </div>
            {% endfor %}
        </div>
    </section>

    <script src="/scripts/recipes.js"></script>
{% endblock %}