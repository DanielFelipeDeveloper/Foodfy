{% extends "user/layout.njk" %}

{% block header %}
    <a href="/about">Sobre</a>
    <a href="/recipes">Receitas</a>
    <a href="/chefs">
      <strong>Chefs</strong>
    </a>
{% endblock %}

{% block content %}
  <div class="chefs-content">
    <div class="chef-cards">
      {% for chef in chefs %}
        <div class="chef-card">
          <div class="chef-image">
            <img src="{{ chef.avatar_url }}" alt="">
          </div>
          <div class="chef-about">
            <h3>{{ chef.name }}</h3>
            <p>{{ chef.total_recipes }} receitas</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}