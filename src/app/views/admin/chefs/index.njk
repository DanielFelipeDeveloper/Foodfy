{% extends 'admin/layout.njk' %}

{% block content %}
  <div class="chef-content">
    <h2>Gerenciar chefs</h2>
    <div class="chef-cards">
      {% for chef in chefs %}
        <div class="chef-card">
        <div class="chef-img">
          <img src="{{ chef.file_src }}" alt="">
        </div>
        <div class="chef-about">
          <h3>{{ chef.name }}</h3>
          <a href="/admin/chefs/{{ chef.id }}"><p>Visualizar</p></a>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
{% endblock content %}
