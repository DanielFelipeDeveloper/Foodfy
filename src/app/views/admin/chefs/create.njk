{% extends 'admin/layout.njk' %}

{% block content %}
  <form class="chef-content" method="POST" action="/admin/chefs" enctype="multipart/form-data">
    <div class="form-header">
      <h2>Criando chef</h2>
      <button
        type="submit"
        method="POST"
        action="/admin/chefs"
      >
        Salvar chef
      </button>
    </div>

    <div class="form">
      <div>Nome</div>
      <div>
        <input type="text" name="name">
      </div>
    </div>

    <div class="form">
      <div>Avatar</div>
      <div id="file-uploads">
        <input 
          type="file" 
          name="photo"
          id="input-file"
          accept="image/*"
          onChange="PhotosUpload.handleFileInput(event)"
        >
        <p>Enviar Avatar</p>
      </div>
    </div>

    {# <div class="form">
      <div>Avatar</div>
      <div>
        <input type="url" name="avatar_url">
      </div>
    </div> #}
  </form>
{% endblock content %}