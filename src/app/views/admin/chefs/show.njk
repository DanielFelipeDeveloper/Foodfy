{% extends 'admin/layout.njk' %}

{% block content %}
  <div class="chef-content">
    <div class="form-header">
      <h2>Chef {{ chef.name }}</h2>
      <a href="/admin/chefs/{{chef.id}}/edit">
        <button>
          Editar chef
        </button>
      </a>
    </div>

    <div class="chef-img-container">
      <img src="{{ file.src }}" alt="">
      <h2>{{ chef.name }}</h2>
      <p>{{chef.total_recipes}} receitas</p>
    </div>

    <div class="chef-recipes">
      <h2>Receitas</h2>
      <div class="recipes">
        {% for recipe in recipes %}
          <div class="card">
          <div class="card-img">
            <img src="{{ recipe.image }}" alt="">
          </div>
          <div class="card-description">
            <h3>{{ recipe.title }}</h3>
            <p>por {{ chef.name }}</p>
            <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>

  </div>
{% endblock content %}