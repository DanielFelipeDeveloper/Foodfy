{% extends 'admin/layout.njk' %}

{% block content %}

  <div class="cards-content">
    <h2>Gerenciar Receitas</h2>

    <div class="cards">
      {% for recipe in recipes %}
        <div class="card" id="{{ recipe.id }}">
          <div class="card-img">
            <img src="{{recipe.file_src}}" alt="Imagem de {{recipe.title}}">
          </div>
          <div class="card-description">
            <h3>{{recipe.title}}</h3>
            <p>{{recipe.chef_name}}</p>
            <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

{% endblock content %}