{% extends "layout.njk" %}

{% block head %}
    <title>{{info.title}}</title>
{% endblock %}

{% block content %}
    <div class="content">
        <div class="text">
            <h1>{{info.text1}}</h1>
            <p>
                {{info.text2}}
            </p>
        </div>

        <div class="chef-img">
            <img src="/assets/chef.png" alt="">
        </div>
    </div>

    <section class="recipes">
            <div class="cards-recipes">
                {% for recipe in recipes %}
                    <div class="card-recipe" id="{{ recipes.indexOf(recipe) }}">
                        <img src={{recipe.image}} alt="Imagem de {{recipe.title}}">
                        <h3>{{recipe.title}}</h3>
                        <p>{{recipe.author}}</p>
                    </div>
                {% endfor %}   
            </div>
    </section>

    <script src="/scripts/recipes.js"></script>
{% endblock %}